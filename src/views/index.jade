extends layout

block s_sheets
  link(rel='stylesheet', href='/css/index.css')

block content
  div#wavepool_main
    div#info
      h1= title
      p A basic ExpressJS application for audio stenography (only encryption/decryption of text data is possible using *.wav files at the moment)
    form(name="data_and_audio_submission", method="POST", enctype="multipart/form-data")
      div#actSelInput
        label(for="actSel") Action Selection
        div(name="actSel")
          input(type="radio", name="action", value="enc", onclick="revealActionOpts('enc')")
          span.label Encrypt
          input(type="radio", name="action", value="dec", onclick="revealActionOpts('dec')")
          span.label Decrypt
      div#afInput
        label(for="af", class="afInput") Audio File
        input(type="file", accept="audio/wav", name="af")
      div#encDataInput
        input(type="text", name="enc_data", placeholder="Message to Encrypt")
      div(id="wavepool_submit", class="actions")
        input(type="submit", value="Go")
  div#errMsg
    p #{errMsgDesc}

block scripts
  script(type="text/javascript" src="/js/controlFormVisibility.js")
